---
import '../styles/global.css'

interface Props {
  title?: string
  description?: string
  image?: string
}

const {
  title = 'RollHook',
  description = 'Zero-downtime rolling deployments for Docker Compose, webhook-driven.',
  image = '/og.png',
} = Astro.props

const canonicalUrl = new URL(Astro.url.pathname, Astro.site)
const ogImageUrl = new URL(image, Astro.site)
---

<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="RollHook" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter / X -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <!-- Favicons -->
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="RollHook" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="darkreader-lock" />

    <!-- Font preloads — breaks the CSS→font request chain -->
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/_astro/@fontsource-variable/instrument-sans/files/instrument-sans-latin-wdth-normal.woff2"
      crossorigin
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/_astro/@fontsource-variable/jetbrains-mono/files/jetbrains-mono-latin-wght-normal.woff2"
      crossorigin
    />
  </head>
  <body class="bg-background text-foreground antialiased">
    <slot />
  </body>
</html>

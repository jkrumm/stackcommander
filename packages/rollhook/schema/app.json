{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RollHook App Config",
  "description": "Per-app rollhook.yaml configuration",
  "type": "object",
  "required": [
    "name",
    "steps"
  ],
  "properties": {
    "name": {
      "description": "Unique app name, matches the deploy/:app route param",
      "type": "string"
    },
    "compose_file": {
      "description": "Path to docker-compose file relative to clone_path",
      "default": "compose.yml",
      "type": "string"
    },
    "steps": {
      "description": "Ordered rollout steps",
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "service"
        ],
        "properties": {
          "service": {
            "description": "Docker Compose service name",
            "type": "string"
          },
          "wait_for_healthy": {
            "description": "Wait for health check to pass before proceeding",
            "default": false,
            "type": "boolean"
          },
          "after": {
            "description": "Service name that must complete before this step starts",
            "type": "string"
          }
        }
      }
    },
    "notifications": {
      "type": "object",
      "properties": {
        "on_failure": {
          "default": true,
          "type": "boolean"
        },
        "on_success": {
          "default": false,
          "type": "boolean"
        }
      }
    },
    "secrets": {
      "type": "object",
      "properties": {
        "doppler_project": {
          "type": "string"
        },
        "doppler_config": {
          "type": "string"
        }
      }
    }
  }
}

{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "noUncheckedSideEffectImports": true
  },
  "exclude": ["node_modules", "**/node_modules", "**/dist"]
}
